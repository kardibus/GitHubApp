<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>
        <item name="android:paddingStart">@dimen/padding_icon_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_icon_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_icon_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_icon_vertical</item>
    </style>

</resources>
